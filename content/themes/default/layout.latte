<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{$title ?? setting('site_name', 'CerneCMS')}</title>
    <meta name="description" content="{setting('site_description', '')}">
    <link rel="icon" type="image/x-icon" href="{setting('site_favicon', '/favicon.ico')}">

    <!-- Load Vite Assets -->
    {\app\helpers\Vite::assets()|noescape}

    <style>
        /* Basic Typographic Defaults for parsed content */
        main {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
        }
        main h1 { font-size: 2.5rem; font-weight: bold; margin-bottom: 1rem; }
        main h2 { font-size: 1.8rem; font-weight: bold; margin-top: 2rem; margin-bottom: 1rem; }
        main p { margin-bottom: 1rem; line-height: 1.6; }
        main ul { list-style-type: disc; margin-left: 1.5rem; margin-bottom: 1rem; }
        main figure { margin: 2rem 0; text-align: center; }
        main img { max-width: 100%; border-radius: 8px; }
        main figcaption { font-size: 0.9rem; color: #666; margin-top: 0.5rem; }

        /* Grid Layout Support */
        .grid-layout {
            display: flex;
            gap: 1rem;
            margin: 1rem 0;
        }
        .grid-column {
            flex: 1;
            min-width: 0;
        }
        @media (max-width: 640px) {
            .grid-layout {
                flex-direction: column;
            }
        }
    </style>
</head>
<body class="bg-white text-gray-900 font-sans antialiased">

    <header class="border-b border-gray-100 py-4 mb-8">
        <div class="max-w-3xl mx-auto flex justify-between px-4">
            <a href="/" class="flex items-center gap-2 font-bold text-xl tracking-tighter">
                {if setting('site_logo')}
                    <img src="{setting('site_logo')}" alt="{setting('site_name')}" class="h-8 w-auto">
                {/if}
                <span>{setting('site_name', 'CerneCMS')}</span>
            </a>
            <nav class="flex gap-4">
                {menu('primary')|noescape}
            </nav>
        </div>
    </header>

    {var $sidebarVisible = function_exists('showSidebar') && showSidebar($page)}

    <div n:class="$sidebarVisible ? 'layout-with-sidebar max-w-6xl mx-auto flex gap-8 px-4' : ''">
        {if $sidebarVisible}
            <aside class="w-64 shrink-0 hidden md:block">
                {localMenu($page)|noescape}
            </aside>
        {/if}

        <main class="{$sidebarVisible ? 'flex-1' : ''}">
            {if function_exists('breadcrumbs')}
                {breadcrumbs($page)|noescape}
            {/if}
            {block content}{/block}
        </main>
    </div>

    <footer class="mt-20 py-8 text-center text-sm text-gray-400 border-t border-gray-100">
        Built with CerneCMS (FlightPHP + Svelte)
    </footer>

</body>
</html>
