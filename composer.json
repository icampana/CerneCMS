{
    "name": "formiga/cms",
    "description": "A lightweight, high-performance CMS built with FlightPHP, SQLite, and Svelte 5.",
    "type": "project",
    "require": {
        "php": "^8.2",
        "flightphp/core": "^3.0",
        "latte/latte": "^3.0",
        "vlucas/phpdotenv": "^5.6",
        "flightphp/active-record": "^0.7.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "app\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "latte/latte": true
        }
    }
}
